<div class="white-space space-md"></div>
<div class="books-cards container">
    <div class="row">

        <!--Card Pre made-->
        <div class="col s12 m4 l3">
            <div class="card book hoverable">
                <div class="card-content">
                    <span class="card-title color-primary">Fault in our star</span>
                    <div class="book__meta">
                        <div class="book__author grey-text">by John Green</div>
                        <div class="book__pdate grey-text">Sep, 2016</div>
                    </div>
                    <div class="space space-xm"></div>
                    <div class="book__desc grey-text text-darken-2">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad aperiam beatae eius expedita
                            facere modi nihil nobis nulla quis ullam! Alias dolorum enim eos eum explicabo iusto
                            natus nulla quo.</p>
                    </div>
                </div>
                <div class="card-footer color-primary">
                    <div class="book__rating">
                        <i class="material-icons">star</i>
                        <i class="material-icons">star</i>
                        <i class="material-icons">star</i>
                        <i class="material-icons">star</i>
                        <i class="material-icons">star_half</i>
                    </div>
                    <div class="book__love">
                        <i class="material-icons">favorite_border</i>
                    </div>
                </div>
            </div>
        </div>
        <!--Card-->
        {{#each data}}
            <div class="col s12 m4 l3">
                <div class="card book hoverable">
                    <div class="card-content">
                        <span class="card-title color-primary">{{this.title}}</span>
                        <div class="space space-xm"></div>
                        <div class="book__meta">
                            <div class="book__author grey-text">by {{this.author}}</div>
                            <div class="book__pdate grey-text">{{formatDate this.p_date}}</div>
                        </div>
                        <div class="space space-xm"></div>
                        <div class="book__desc grey-text text-darken-2">
                            <p>{{this.desc}}</p>
                        </div>
                    </div>
                    <div class="card-footer color-primary">
                        <div class="book__rating">
                            <i class="material-icons">star</i>
                            <i class="material-icons">star</i>
                            <i class="material-icons">star</i>
                            <i class="material-icons">star</i>
                            <i class="material-icons">star_half</i>
                        </div>
                        <div class="book__love">
                            <i class="material-icons">favorite_border</i>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
