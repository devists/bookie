<div class="white-space space-md"></div>
<div class="container row">
    <div class="col s12 m10 offset-m1 l8 offset-l2 white">
        <div class="row">
            <div class="white-space space-md clearfix"></div>
            <h4 class="col s10 offset-s1 t-trans-c">{{user}} Login</h4>
            <div class="white-space space-sm clearfix"></div>
            <form method="POST" action="/{{submitUrl}}/login" class="col s10 offset-s1">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="username" name="username" type="text" class="validate" required>
                        <label for="username">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" name="password" type="password" class="validate" required>
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s4">
                        <button class="btn waves-effect waves-light" type="submit">Login
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </form>
            <div class="white-space space-md clearfix"></div>
        </div>
    </div>
</div>
<div class="white-space space-md"></div>