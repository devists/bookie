<div class="white-space space-md"></div>
<div class="container white">
    <div class="row">
        <div class="white-space space-md clearfix"></div>
        <h4 class="col s10 offset-s1">Add New Book</h4>
        <div class="white-space space-sm clearfix"></div>
        <form method="post" action="/books" class="col s10 offset-s1">
            <div class="row">
                <div class="input-field col s12">
                    <input id="title" type="text" class="validate">
                    <label for="title">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="author" type="text" class="validate">
                    <label for="author">Author</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="desc" class="materialize-textarea" length="200"></textarea>
                    <label for="desc">Description</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="publisher" type="text" class="validate">
                    <label for="author">Publisher</label>
                </div>
                <div class="input-field col s6">
                    <input id="p_date" type="date" class="datepicker validate">
                    <label for="p_date">Publish Date</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <input id="isbn" type="text" class="validate">
                    <label for="isbn">ISBN</label>
                </div>
                <div class="input-field col s4">
                    <input id="lang" type="text" class="validate">
                    <label for="lang">Language</label>
                </div>
                <div class="input-field col s4">
                    <input id="pages" type="number" class="validate">
                    <label for="pages">Pages</label>
                </div>
            </div>
            <div class="row">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
        <div class="white-space space-md clearfix"></div>
    </div>
</div>
<div class="white-space space-md"></div>